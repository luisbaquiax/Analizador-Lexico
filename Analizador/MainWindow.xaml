        <TextBox x:Name="txtOracion" HorizontalAlignment="Left" Height="23" Margin="255,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348"/>
        <ScrollViewer HorizontalAlignment="Left" Height="148" Margin="255,166,0,0" VerticalAlignment="Top" Width="348">
